@model CustomExports.Models.AppLog

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Application Logs</h3>
<br /><br />
<table class="table table-sm row_header_table">
    <tbody id="TableHeader">
    <tbody>
        <tr>
            <td>
                <div class="container-fluid">

                    <div class="row row_header_no_border">

                        <div class="col-2 grid-single-spaced">
                            User Information
                        </div>

                        <div class="col-2 grid-single-spaced">
                            Log Type
                        </div>

                        <div class="col-3 grid-single-spaced">
                            Log Time
                        </div>

                        <div class="col-2 grid-single-spaced">
                            Client Name
                        </div>

                        <div class="col-1 grid-single-spaced">
                            Accounts
                        </div>

                        <div align="right" class="col-2 grid-single-spaced">
                            Account Totals
                        </div>

                    </div>
                </div>
            </td>
        </tr>

    </tbody>
</table>
<!-- TABLE HEADER -- END -->

<!-- TABLE DETAIL ROW -- BEGIN -->
<table class="table table-striped table-sm">
    <tbody id="myTable">

        @foreach (CustomExports.Data.AppLog item in ViewBag.AppLogData)
        {
            <tr>
                <td>

                    <div class="container-fluid">

                        <div class="row row_detail">

                            <div class="col-2 grid-single-spaced">
                            </div>

                            <div class="col-2 grid-single-spaced">
                                @item.LogType
                            </div>

                            <div class="col-3 grid-single-spaced">
                                @item.LogTime
                            </div>

                            <div class="col-2 grid-single-spaced">
                                @item.ClientName
                            </div>

                            <div class="col-1 grid-single-spaced">
                                @item.NumberOfAccounts
                            </div>

                            <div align="right" class="col-2 grid-single-spaced">
                                @string.Format("{0:0,0.00}", item.TotalAmount)
                            </div>

                        </div>


                    </div>
                </td>
            </tr>

        }

    </tbody>
</table>
<!-- TABLE DETAIL ROW -- END -->

