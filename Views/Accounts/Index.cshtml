@model CustomExports.Models.Account

@{
    ViewData["Title"] = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Accounts</h3>
<br />
<br />
<table class="table table-sm row_header_table">
    <tbody id="TableHeader">
    <tbody>
        <tr>
            <td>
                <div class="container-fluid">

                    <div class="row row_header_no_border">

                        <div align="right" class="col-2 grid-single-spaced">
                            Account Num
                        </div>

                        <div align="right" class="col-2 grid-single-spaced">
                            Balance
                        </div>

                        <div class="col-1 grid-single-spaced">
                        </div>

                        <div class="col grid-single-spaced">
                            Client Name
                        </div>

                        <div class="col grid-single-spaced">
                            Admit Date
                        </div>

                        <div class="col grid-single-spaced">
                            Discharge Date
                        </div>

                    </div>
                </div>
            </td>
        </tr>

    </tbody>
</table>
<!-- TABLE HEADER -- END -->
<!-- TABLE DETAIL ROW -- BEGIN -->
<table class="table table-striped table-sm">
    <tbody id="myTable">

        @foreach (CustomExports.Models.Account item in ViewBag.AllAccountData)
        {
            <tr>
                <td>

                    <div class="container-fluid">

                        <div class="row row_detail">

                            <div align="right" class="col-2 grid-single-spaced">
                                @item.AccountNumber
                            </div>

                            <div align="right" class="col-2 grid-single-spaced">
                                @string.Format("{0:0,0.00}", item.Balance)
                            </div>

                            <div class="col-1 grid-single-spaced">
                            </div>

                            <div class="col grid-single-spaced">
                                @item.ClientName
                            </div>

                            <div class="col grid-single-spaced">
                                @item.AdmitDate.ToShortDateString()
                            </div>

                            <div class="col grid-single-spaced">
                                @item.DischargeDate.ToShortDateString()
                            </div>

                        </div>

                    </div>
                </td>
            </tr>

        }

    </tbody>
</table>
<!-- TABLE DETAIL ROW -- END -->
